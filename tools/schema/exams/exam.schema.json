{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Standard Exam Schema",
  "type": "object",
  "required": ["exam_uid", "metadata", "sections"],
  "properties": {
    "exam_uid": { "type": "string" },

    "metadata": {
      "type": "object",
      "required": [
        "subject",
        "grade",
        "title",
        "difficulty",
        "skills",
        "competencies"
      ],
      "properties": {
        "subject": { "type": "string" },
        "grade": { "type": "integer" },
        "chapter": { "type": "string" },
        "lesson": { "type": "string" },
        "title": { "type": "string" },

        "difficulty": {
          "type": "string",
          "enum": ["easy", "medium", "hard"]
        },

        "skills": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "competencies": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        }
      }
    },

    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "questions"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["mcq", "tfq", "short_answer", "essay", "essay_advanced"]
          },
          "questions": {
            "type": "array",
            "minItems": 1
          }
        }
      }
    }
  }
}
