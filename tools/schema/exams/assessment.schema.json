{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Assessment Schema",
  "type": "object",
  "required": ["cognitive", "competencies"],
  "properties": {
    "cognitive": {
      "type": "object",
      "required": ["level", "weight"],
      "properties": {
        "level": {
          "type": "string",
          "enum": [
            "remember",
            "understand",
            "apply",
            "analyze",
            "evaluate",
            "create"
          ]
        },
        "weight": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        }
      }
    },
    "competencies": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["code", "weight"],
        "properties": {
          "code": {
            "type": "string",
            "enum": [
              "reasoning",
              "problem_solving",
              "modeling",
              "representation",
              "communication"
            ]
          },
          "weight": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0
          }
        }
      }
    }
  }
}
